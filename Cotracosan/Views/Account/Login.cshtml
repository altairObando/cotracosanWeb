@using Cotracosan.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Iniciar sesión</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/Tema/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Content/Tema/vendors/base/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/Content/Tema/style.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Content/images/logo.svg" alt="logo"/>
                            </div>
                            <!--<h4>Hello! let's get started</h4> -->
                            <h6 class="font-weight-light">Inicia sesión para continuar</h6>
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "pt-3", role = "form" }))
            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg",@placeholder="Usuario"  })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Contraseña" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Iniciar sesión</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="form-check">
                                            <label class="col-form-label text-muted">
                                                @Html.CheckBoxFor(m => m.RememberMe, new { @type = "checkbox", @class = "form-check-input" })
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>                                            
                                        </div>
                                    </div>
                                </div>                                
                                @* Habilite esta opción después de habilitar la confirmación de la cuenta para la función de restablecimiento de contraseña
            <p>
                @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
            </p>*@
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
</body>
</html>

<script src="~/Scripts/Tema/vendors/base/vendor.bundle.base.js"></script>
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/Tema/off-canvas.js"></script>
<script src="~/Scripts/Tema/hoverable-collapse.js"></script>
<script src="~/Scripts/Tema/template.js"></script>
