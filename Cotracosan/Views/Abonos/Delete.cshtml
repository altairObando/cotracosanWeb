@model Cotracosan.Models.Cotracosan.Abonos

@{
    Layout = null;
}
<h3>¿Esta seguro de borrar este abono?</h3>
<div>
    
    <dl class="dl-horizontal">
        <dt>
            Datos del credito
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creditos.InfoCredito)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaDeAbono)
        </dt>

        <dd>
            @string.Format("{0:d}", Model.FechaDeAbono)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodigoAbono)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodigoAbono)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MontoDeAbono)
        </dt>

        <dd>
            @string.Format("{0:C2}", Model.MontoDeAbono)
        </dd>
        <dt>
            Saldo
        </dt>
        @{ 
            decimal suma = Model.Creditos.MontoTotal - Model.Creditos.Abonos.Sum(x => x.MontoDeAbono);
            <dd>
                @string.Format("{0:C2}", suma)
            </dd>
        }
    </dl>

    @using (Html.BeginForm("Delete", "Abonos", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", @class = "form-inline" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" />
        </div>
    }
</div>
