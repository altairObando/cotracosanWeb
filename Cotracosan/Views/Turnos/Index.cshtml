

@{
    ViewBag.Title = "Turnos";
}

<br />
<h2>Listado de Turnos de Entrada y Salida de buses</h2>

<p>
    <button class="btn btn-success" onclick="getHtmlData('/Turnos/Create/')" type="button" data-toggle="modal" data-target="#modal-default">
        Nuevo Turno
    </button>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table" id="tableTurnos">
                <thead>
                    <tr>
                        <th>
                            Codigo
                        </th>
                        <th>
                            Hora de Salida
                        </th>
                        <th>
                            Hora de Llegada
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@Html.Partial("_modal")
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/DataTable")
    @Scripts.Render("~/bundles/crud")
    @Styles.Render("~/Content/datatablecss")
    <script>
    // Cargar datatable
    generarDataTable(
        '/Turnos/getTurnos/', 3,
        "tableTurnos", ["Codigo", "HoraSalida", "HoraLlegada", "Id"],
        [
            '/Turnos/Edit',
            '/Turnos/Details',
            '/Turnos/Delete'
        ]);
    </script>
}